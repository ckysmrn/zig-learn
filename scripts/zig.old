#!/usr/bin/sh

REPO=$(git config remote.origin.url | sed -e 's/https:\/\/github\.com\///' \
	| sed -e 's/git@[^:]\+://' \
	| sed -e 's/\.git$//'\
)
BASENAME=$(basename $REPO)
: ${WORKDIR:="/workspaces/${BASENAME}"}
echo $WORKDIR
gh cs ssh -R $REPO -- "cd $WORKDIR && echo PWD=\$PWD && git pull && zig $@"
